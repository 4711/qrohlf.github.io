// =============================================================
// =============================================================
//
// Mixins
//
// =============================================================
// =============================================================

@mixin color-scheme( $background,
                     $text,
                     $link,
                     $link-hover,
                     $border-color: false,
                     $border-color-hover: false) {
  background: $background;
  color: $text;
  a {
    color: $link;
  }
  a:hover {
    color: $link-hover;
  }
  @if $border-color {
    border-color: $border-color;
  }
  @if $border-color-hover {
    &:hover {
      border-color: $border-color-hover;
    }
  }
}

@mixin chip-variant( $background,
                     $background-hover,
                     $text,
                     $text-hover,
                     $border,
                     $border-hover) {
  .chip {
    background: $background;
    border-color: $border;
    color: $text;
    &:hover {
      color: $text-hover;
      border-color: $border-hover;
      background: $background-hover;
    }
    a, a:hover {
      color: inherit;
    }
  }
}

// =============================================================
// =============================================================
//
// Utility Classes
//
// =============================================================
// =============================================================
.colors-gray-bg {
  @include color-scheme( #E1F2FF,
                         $gray-700,
                         $light-blue-500,
                         $light-blue-700);
    //chip colors
  @include chip-variant( white,
                         white,
                         $gray-600,
                         $gray-700,
                         #ddd,
                         #ccc);
  h1 {
    color: $brand-qrohlf;
  }
}

.colors-header-footer {
    @include color-scheme( white,
                         $gray-700,
                         $bluegray,
                         $light-blue-600);
}

.wrapper {
  margin: 0 0;
  padding: 1rem;
  @include clearfix();
}


